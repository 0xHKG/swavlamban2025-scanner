# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=swavlamban2025
DB_USER=postgres
DB_PASSWORD=your_database_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration - Multiple providers with priority order

# Option 1: Brevo API (PRIMARY - Fast transactional email, RECOMMENDED)
USE_BREVO=true
BREVO_API_KEY=your_brevo_api_key
# Get API key from: https://app.brevo.com/settings/keys/api
# Sender: swavlamban2025@gmail.com (must be verified in Brevo)

# Option 2: Mailjet API (STANDBY - Fallback if Brevo fails)
MAILJET_API_KEY=your_mailjet_api_key
MAILJET_API_SECRET=your_mailjet_api_secret
EMAIL_SENDER=noreply@swavlamban2025.in

# Option 3: Gmail SMTP (FINAL FALLBACK - If both APIs fail)
USE_GMAIL_SMTP=true
GMAIL_ADDRESS=swavlamban2025@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Option 4: NIC SMTP (Optional - Official Government Email)
USE_NIC_SMTP=false
NIC_EMAIL_ADDRESS=niio-tdac@navy.gov.in
NIC_EMAIL_PASSWORD=your_nic_email_password

# Option 5: MailBluster (Optional - Alternative API)
MAILBLUSTER_API_KEY=your_mailbluster_api_key
MAILBLUSTER_BRAND_ID=your_brand_id

# Application
APP_NAME=Swavlamban 2025
DEBUG=True
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:8501","http://localhost:3000"]

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=["jpg","jpeg","png","pdf"]

# Pass Generation
